        <TextBox x:Name="income" HorizontalAlignment="Left" Height="28" Margin="156,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139" FontSize="18"/>
        <TextBox x:Name="expenses" HorizontalAlignment="Left" Height="28" Margin="156,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Height="28" Margin="310,10,0,0" TextWrapping="Wrap" Text="บาท/วัน" VerticalAlignment="Top" Width="72" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Height="28" Margin="310,43,0,0" TextWrapping="Wrap" Text="บาท/วัน" VerticalAlignment="Top" Width="72" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Height="28" Margin="10,76,0,0" TextWrapping="Wrap" Text="ราคาของที่อยากได้" VerticalAlignment="Top" Width="130" FontSize="18" TextAlignment="Right"/>
        <TextBox x:Name="wishlist" HorizontalAlignment="Left" Height="28" Margin="156,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" FontSize="18"/>
